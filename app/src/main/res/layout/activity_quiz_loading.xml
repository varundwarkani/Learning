<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".QuizLoading">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvLeaderboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        />

    <Button
        android:id="@+id/btStartQuiz"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/blinkingborder"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Start Quiz!"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btStartLeaderboard"
        android:layout_width="184dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/btStartQuiz"
        android:layout_toRightOf="@+id/btStartQuiz"
        android:background="#BDBDBD"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Leaderboard"
        android:textColor="#424242"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>