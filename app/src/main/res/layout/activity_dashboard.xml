<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    tools:context=".Dashboard">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/cv2"
        android:layout_below="@+id/cv1"
        app:cardBackgroundColor="#6349C7"
        app:cardCornerRadius="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="30dp"
            android:id="@+id/deptheader"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp"
            android:textColor="#FFF"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="#FFF"
            android:text="Minimum 100 points is required for reedeming. You will get Rs.10 on successful redeemption"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDashboardPoints"
            android:textColor="#FFF"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Total Points: "/>

        <Button
            android:layout_width="200dp"
            android:id="@+id/btDashboard"
            android:layout_height="wrap_content"
            android:text="Redeem"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="70dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#76E10D"
            android:textColor="#BF5012"
            />
    </android.support.v7.widget.CardView>

</RelativeLayout>