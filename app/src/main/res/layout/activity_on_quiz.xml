<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    tools:context=".OnQuiz">

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="80dp"
        android:paddingRight="50dp"
        android:layout_height="wrap_content"
        android:text="Basics Of DBMS"
        android:textColor="#FFF"
        android:layout_marginTop="80dp"
        android:id="@+id/tvOnlineQuizName"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="20dp"
        android:id="@+id/cv2"
        android:layout_below="@+id/cv1"
        app:cardBackgroundColor="#6349C7"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tvOnlineQuizName"
            android:layout_height="wrap_content"
            android:text="Playing With: Name here"
            android:layout_marginTop="15dp"
            android:textColor="#FFF"
            android:id="@+id/tvOnlinePlayerName"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tvOnlinePlayerName"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="No. of Questions: 00"
            android:layout_marginTop="55dp"
            android:id="@+id/tvOnlineQuizQuestions"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="280dp"
        android:id="@+id/btOnlineReady"
        android:background="#F9E721"
        android:textColor="#BF5012"
        android:textSize="20dp"
        android:text="Ready!"/>



</RelativeLayout>